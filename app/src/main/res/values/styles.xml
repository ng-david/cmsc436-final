<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/dinpro</item>
        <item name="fontFamily">@font/dinpro</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <!--timepicker styling-->
    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:headerBackground">@color/colorGreen</item> <!--background behind time numbers-->
        <item name="android:numbersSelectorColor">@color/colorGreen</item> <!--the clock hand color-->

        <item name="android:numbersTextColor">#000000</item> <!--clock face numbers-->
        <item name="android:numbersBackgroundColor">#e5e5e5</item> <!--clock face background color-->
       <!-- <item name="android:background">@color/colorPrimary</item>--> <!--background behind clock-->

        <!--Time styling-->
        <item name="android:headerTimeTextAppearance">@style/TextAppearance.TimePickerDialogStyle.TimeLabel</item> <!-- TimePicker Time *TextAppearance* -->
    </style>

    <!--time text colors-->
    <style name="TextAppearance.TimePickerDialogStyle.TimeLabel" parent="@android:style/TextAppearance.Material">
        <item name="android:textSize">60sp</item> <!-- from -->
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--save button-->
    <style name="saveButton">
        <item name="android:background">@color/colorGreen</item> <!--save button color-->
        <!--save button text-->
    </style>
</resources>
