<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/dinpro</item>
        <item name="fontFamily">@font/dinpro</item> <!-- target android sdk versions < 26 and > 14 if theme other than AppCompat -->
    </style>

    <!--timepicker styling-->
    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="colorAccent">@color/colorPrimary</item> <!--bar w the time color-->
       <!-- <item name="android:background">@color/colorPrimary</item>--> <!--background behind clock-->
        <item name="android:tickMark">#ff7bac</item>
    </style>

    <!--save button-->
    <style name="saveButton"></style>
</resources>
